covered_under_cardinal_care_24_25_benefit(C, ambulance_service_benefit) :-
    claim.service_type(C, emergency_ambulance_service) &
    is_covered_emergency_ambulance_service(C)

is_covered_emergency_ambulance_service(C) :-
    claim.first_hospital_can_provide_emergency_services(C, yes) &
    claim.ambulance_service_to_first_hospital(C, yes)

is_covered_emergency_ambulance_service(C) :-
    claim.first_hospital_can_provide_emergency_services(C, no) &
    claim.ambulance_service_from_one_hospital_to_another(C, yes)


covered_under_cardinal_care_24_25_benefit(C, ambulance_service_benefit) :-
    claim.service_type(C, non_emergency_ambulance_service) &
    non_emergency_transportation_is_precertified(C, yes) &
    claim.non_emergency_transport_is_licensed(C, yes) &
    is_covered_type_of_non_emergency_transportation(C) &
    claim.non_emergency_transport_is_the_only_safe_means_of_transportation(C, yes)

is_covered_type_of_non_emergency_transportation(C) :-
    claim.type_of_non_emergency_transportation(C, T) &
    member(T, [
        ambulance,
        psychiatric_transport_van
    ])