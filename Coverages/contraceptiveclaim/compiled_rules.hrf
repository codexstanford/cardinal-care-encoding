    claim.service_type(C, female_voluntary_sterilization) &
    claim.type_of_female_voluntary_sterilization_procedure_service_or_supplies(C, Procedure) &
    member(Procedure, [
        tubal_ligation,
        sterilization_implants,
        related_services,
        related_supplies        
    ])


